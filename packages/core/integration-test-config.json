{
    "name": "Superglue Integration Test Suite",
    "description": "Comprehensive integration testing framework for superglue workflow building and execution",
    "version": "1.0.0",
    "environment": {
        "graphqlEndpoint": "http://localhost:4000/graphql",
        "apiKey": "local-development-key",
        "timeout": 300000,
        "retries": 3
    },
    "testConfiguration": {
        "setupTimeout": 120000,
        "executionTimeout": 60000,
        "cleanupTimeout": 30000,
        "documentationProcessingTimeout": 120000,
        "enableParallelExecution": false,
        "saveResultsToFile": true,
        "resultsDirectory": "./integration-test-results"
    },
    "metrics": {
        "trackBuildTime": true,
        "trackExecutionTime": true,
        "trackDataQuality": true,
        "trackComplexityDistribution": true,
        "trackCategoryDistribution": true,
        "generateReport": true
    },
    "notifications": {
        "enableSlackNotifications": false,
        "slackWebhookUrl": "",
        "enableEmailNotifications": false,
        "emailRecipients": []
    },
    "benchmarking": {
        "enabled": true,
        "baselineFile": "./integration-test-baseline.json",
        "thresholds": {
            "successRate": 0.8,
            "averageBuildTime": 30000,
            "averageExecutionTime": 15000,
            "dataQualityPassRate": 0.9
        }
    },
    "integrations": {
        "required": [
            "hubspot-crm",
            "stripe-pay",
            "jira-projects",
            "attio-crm"
        ],
        "optional": [
            "timbuk2-shopify",
            "postgres-lego",
            "shopify-hydrogen",
            "supabase-db",
            "twilio-comm",
            "sendgrid-email"
        ]
    },
    "workflows": {
        "singleSystem": {
            "enabled": true,
            "priority": "high"
        },
        "multiSystem": {
            "enabled": true,
            "priority": "medium"
        },
        "complexity": {
            "low": {
                "enabled": true,
                "timeout": 30000
            },
            "medium": {
                "enabled": true,
                "timeout": 45000
            },
            "high": {
                "enabled": true,
                "timeout": 60000
            }
        }
    },
    "reporting": {
        "format": "json",
        "includeDetailed": true,
        "includeMetrics": true,
        "includeBenchmarks": true,
        "outputFile": "integration-test-report.json"
    }
}